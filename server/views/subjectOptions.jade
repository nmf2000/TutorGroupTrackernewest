extends layout

block content
    .container-fluid
        .row
            .col-sm-12
                h1 Subject Options
        .row
            .col-sm-6
                each subject in responseBody
                    p #{subject.courseType} #{subject.subject}

        .row
            .col-sm-5
                form(method='POST', action='/admin/subjectDetails')
                    .row
                        .col-sm-8
                            h3 Add new subject
                            .form-group
                                label Subject:
                                input.date.form-control(type='text', name='subject')
                            .form-group
                                label Course Type:
                                input.form-control(type='text', name='courseType')
                            .form-group
                                button Save subject





